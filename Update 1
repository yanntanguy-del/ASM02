global write_digit
global write_number
global main

SECTION .data
digit_buffer: db 0

SECTION .text

write_digit:
    push rbp
    mov rbp, rsp

    add rdi, 0x30
    mov [digit_buffer], dil

    mov rax, 1
    mov rdi, 1
    mov rsi, digit_buffer
    mov rdx, 1
    syscall

    mov rsp, rbp
    pop rbp
    ret
